@model bus_reservation.Models.Employee

@{
    ViewData["Title"] = "Your Profile";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
    var Message = TempData["Message"] as string;
}

<div class="pagetitle">
    <h1>Profile</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="EmployeeDashboard">Home</a></li>
            <li class="breadcrumb-item active">Profile</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section profile">
    <div class="row">
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    <img src="@Html.DisplayFor(model => model.EmployeeImage)" alt="Profile" class="rounded-circle">
                    <h2>@Html.DisplayFor(model => model.Name)</h2>
                    <h3>@Html.DisplayFor(model => model.Designation)</h3>
                </div>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Profile</button>
                        </li>

                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Change Password</button>
                        </li>

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            @if (!string.IsNullOrEmpty(Message))
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong>@Message</strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            <h5 class="card-title">Profile Details</h5>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label ">Full Name</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Name)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Father Name</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Fathername)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Email</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Email)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Age</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Age)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Date of Birth</div>
                                <div class="col-lg-9 col-md-8">@String.Format("{0:dd/MM/yyyy}", Model.Dob)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Contact</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Contact)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Address</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Address)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Martial Status</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.MartialStatus)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Qualification</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Qualification)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Salary</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Salary)</div>
                            </div>

                            <div class="row text-center fs-2">
                                <div class="col-12 label">Branch Details</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Branch Code</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Branch.BranchCode)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Branch Address</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Branch.Address)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Branch City</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Branch.City)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Branch State</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Branch.State)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Branch ZipCode</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Branch.ZipCode)</div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3 col-md-4 label">Branch Contact</div>
                                <div class="col-lg-9 col-md-8">@Html.DisplayFor(model => model.Branch.Contact)</div>
                            </div>

                        </div>

                        <div class="tab-pane fade pt-3" id="profile-change-password">

                            <form asp-action="changepassword" asp-controller="EmployeeDashboard" id="passwordForm">

                                <div class="row g-4">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="form-group input-group">
                                            <label asp-for="Password" class="control-label"></label>
                                            <div class="input-group">
                                                <input type="password" asp-for="Password" class="form-control" id="password" required placeholder="Password should be 5 to 15 characters" />

                                                <button type="button" class="btn btn-success" id="togglePassword">
                                                    <i class="fas fa-eye" id="eyeIcon"></i>
                                                </button>
                                            </div>

                                            <span id="passwordError" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-12 col-xl-12 mt-4 mb-2">
                                    <div class="form-group">
                                        <input type="submit" value="Change Password" class="btn btn-outline-success w-100" />
                                    </div>
                                </div>
                            </form>

                           


                        </div>

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Eye toggle button
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordField = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');
            if (passwordField.type === "password") {
                passwordField.type = "text";
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = "password";
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        });

        // Password validation
        document.getElementById('password').addEventListener('input', function () {
            const password = this.value;
            const passwordError = document.getElementById('passwordError');
            const passwordRegex = /^.{5,15}$/;

            if (!passwordRegex.test(password)) {
                passwordError.textContent = "Password must be between 5 and 15 characters.";
            } else {
                passwordError.textContent = "";
            }
        });

        // Form submission validation
        document.getElementById('passwordForm').addEventListener('submit', function (e) {
            const password = document.getElementById('password').value;
            const passwordRegex = /^.{5,15}$/;

            if (!passwordRegex.test(password)) {
                e.preventDefault(); // Prevent form submission if password is invalid
                document.getElementById('passwordError').textContent = "Password must be between 5 and 15 characters.";
            }
        });
    });
</script>